    <script>
        // Paste button functionality
        document.querySelector('.paste-btn').addEventListener('click', async () => {
            try {
                const text = await navigator.clipboard.readText();
                document.querySelector('.url-input').value = text;
            } catch (err) {
                alert('Failed to paste from clipboard. Please paste manually.');
            }
        });
        
        // Compression level selection
        const compressionOptions = document.querySelectorAll('.compression-option');
        compressionOptions.forEach(option => {
            option.addEventListener('click', () => {
                compressionOptions.forEach(opt => opt.classList.remove('active'));
                option.classList.add('active');
            });
        });
        
        // Download button functionality
        document.querySelector('.download-btn').addEventListener('click', () => {
            const url = document.querySelector('.url-input').value.trim();
            const compressionLevel = document.querySelector('.compression-option.active').dataset.level;
            
            if (!url) {
                alert('Please enter a video URL');
                return;
            }
            
            // Check if URL is from a supported platform
            const supportedPlatforms = [
                'instagram.com', 'youtube.com', 'youtu.be', 
                'facebook.com', 'tiktok.com', 'twitter.com',
                'dailymotion.com', 'vimeo.com'
            ];
            
            const isSupported = supportedPlatforms.some(platform => url.includes(platform));
            
            if (!isSupported) {
                alert('This platform is not supported or the URL is invalid. Please check the URL and try again.');
                return;
            }
            
            // Simulate download process
            const downloadBtn = document.querySelector('.download-btn');
            const originalText = downloadBtn.textContent;
            
            downloadBtn.textContent = 'Processing...';
            downloadBtn.disabled = true;
            
            setTimeout(() => {
                downloadBtn.textContent = `Downloading (${compressionLevel} quality)...`;
                
                setTimeout(() => {
                    downloadBtn.textContent = originalText;
                    downloadBtn.disabled = false;
                    alert(`Your download in ${compressionLevel} quality should start shortly. If not, check your browser downloads.`);
                }, 1500);
            }, 2000);
        });
        
        // FAQ functionality
        const faqQuestions = document.querySelectorAll('.faq-question');
        faqQuestions.forEach(question => {
            question.addEventListener('click', () => {
                const answer = question.nextElementSibling;
                const isActive = answer.classList.contains('active');
                
                // Close all answers
                document.querySelectorAll('.faq-answer').forEach(ans => {
                    ans.classList.remove('active');
                });
                
                // If the clicked answer wasn't active, open it
                if (!isActive) {
                    answer.classList.add('active');
                }
            });
        });
        
        // Initialize AdSense ads
        function initializeAds() {
            // This function would be called when the page loads
            // In a real implementation, AdSense code would automatically initialize
            console.log('AdSense ads initialized');
            
            // Example of how to push ads (commented out as we're using demo content)
            /*
            (adsbygoogle = window.adsbygoogle || []).push({
                google_ad_client: "ca-pub-YOUR_AD_CLIENT_ID",
                enable_page_level_ads: true
            });
            */
        }
        
        // Call initialization when page loads
        window.addEventListener('load', initializeAds);
    </script>
